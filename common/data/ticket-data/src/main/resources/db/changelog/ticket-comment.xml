<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="005-create-ticket-comment" author="roman.novikov">
        <createTable tableName="ticket_comment">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="ticket_id" type="UUID">
                <constraints nullable="false"/>
            </column>

            <column name="text" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="created_by" type="UUID"/>

            <column name="created_at" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>

            <column name="updated_at" type="TIMESTAMP" defaultValueDate="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="ticket_comment"
                                 baseColumnNames="ticket_id"
                                 referencedTableName="ticket"
                                 referencedColumnNames="id"
                                 constraintName="fk_comment_ticket"
                                 onDelete="CASCADE"/>

    </changeSet>
</databaseChangeLog>
